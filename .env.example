# VoyageIA Environment Configuration Example
# Copiez ce fichier vers .env et remplissez avec vos vraies clés

# Configuration du serveur
PORT=3000
NODE_ENV=development

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Amadeus API Configuration (pour les vols et hôtels)
AMADEUS_CLIENT_ID=your_amadeus_client_id_here
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret_here
AMADEUS_BASE_URL=https://api.amadeus.com

# Configuration Base de données (optionnel)
# DATABASE_URL=mongodb://localhost:27017/voyageia
# ou
# DATABASE_URL=postgres://username:password@localhost:5432/voyageia

# Configuration sécurité
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Configuration CORS
CORS_ORIGIN=http://localhost:3000

# Configuration Logging
LOG_LEVEL=info

# Limites de l'API
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Configuration Email (pour notifications)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Configuration de cache Redis (optionnel)
# REDIS_URL=redis://localhost:6379
